flowchart TB
    subgraph User["👤 User Level"]
        UA[Submit Course Application]
        UB{Provide Valid Data}
        UC[Select Course Type]
        UD[Set Skill Level]
        UE[Specify Waiting Preferences]
    end

    subgraph Application["📋 Application Level"]
        AA[Validate User Input]
        AB{Meet Course Requirements}
        AC[Generate Application ID]
        AD[Record Submission Timestamp]
    end

    subgraph Buffer["🔄 Buffer Level"]
        BA{Spaces Available}
        BB[Queue Application]
        BC{Buffer Capacity Reached}
        BD[Remove Oldest Application]
    end

    subgraph ApplicationDispatcher["📬 Application Dispatcher"]
        CA[Match Application Requirements]
        CB[Evaluate Teacher Availability]
        CC[Select Optimal Teacher]
    end

    subgraph TeacherSelector["👨‍🏫 Teacher Selector"]
        DA[Analyze Teacher Specialization]
        DB[Check Teacher Load]
        DC[Calculate Teacher Priority]
    end

    subgraph Teacher["🧑‍🏫 Teacher Level"]
        EA[Review Application]
        EB{Accept Student}
        EC[Create Study Group]
        ED[Send Confirmation]
    end

    UA --> UB
    UB -->|Valid| UC
    UB -->|Invalid| UA
    UC --> UD
    UD --> UE
    
    UE --> AA
    AA --> AB
    AB -->|Yes| AC
    AB -->|No| UA
    AC --> AD
    
    AD --> BA
    BA -->|No| BB
    BA -->|Yes| CA
    
    BB --> BC
    BC -->|Yes| BD
    BC -->|No| CA
    
    CA --> CB
    CB --> CC
    
    CC --> DA
    DA --> DB
    DB --> DC
    
    DC --> EA
    EA --> EB
    EB -->|Yes| EC
    EB -->|No| CA
    
    EC --> ED
